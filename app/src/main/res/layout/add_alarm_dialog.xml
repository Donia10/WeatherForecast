<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="50dp"
    android:padding="20dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:id="@+id/alrmDataIcons_dialog"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:weightSum="4">

        <ImageButton
            android:id="@+id/time_dialog"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_marginTop="25dp"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_time_24"
            android:background="@color/white"/>
        <ImageButton
            android:id="@+id/event_dialog"
            android:src="@drawable/ic_thunderstorm"
            android:background="@color/white"
            android:layout_marginTop="25dp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"/>

        <RadioGroup
            android:id="@+id/radioGroup"
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:orientation="vertical">
            <RadioButton
                android:id="@+id/notification_dialog"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="true"
                android:text="@string/Notification"/>
            <RadioButton
                android:id="@+id/defaultSound_dialog"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/DefaultAlarmSound"/>
        </RadioGroup>

    </LinearLayout>

    <Button
        android:id="@+id/save"
        android:text="save"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="25dp"
        app:layout_constraintTop_toBottomOf="@id/alrmDataIcons_dialog"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <Button
        android:id="@+id/cancel"
        android:text="cancel"
        app:layout_constraintLeft_toRightOf="@id/save"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/save"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
</androidx.constraintlayout.widget.ConstraintLayout>