<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/daily_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/txt_daily_dt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="dateTime" />

    <LinearLayout
        android:id="@+id/dailyDay_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/daily_day"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="day" />

        <ImageView
            android:id="@+id/dailyDay_icon"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@mipmap/ic_launcher" />

        <TextView
            android:id="@+id/dailyDay_temp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="temp" />

        <TextView
            android:id="@+id/daily_sunrise"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="sunrise" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/dailyNight_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/daily_night"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="night" />

        <ImageView
            android:id="@+id/dailyNight_icon"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@mipmap/ic_launcher" />

        <TextView
            android:id="@+id/dailyNight_temp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="temp" />

        <TextView
            android:id="@+id/dailyNight_sunset"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="sunrise" />
    </LinearLayout>
</LinearLayout>